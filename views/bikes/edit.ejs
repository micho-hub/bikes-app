<% include ../partials/header %>
<h1 class="indexH1">Edit: <%= editPost.title %></h1>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form action="/bikes/<%=editPost._id%>?_method=PUT" method="POST">
          <input class="form-control" type="text" name="newPost[title]" value="<%= editPost.title %>">
          <input class="form-control" type="text" name="newPost[headimg]" value="<%=editPost.headimg%>">">
          <input class="form-control" type="text" name="newPost[image]" value="<%= editPost.image %> ">
          <input class="form-control" type="text" name="newPost[text]" value=" <%= editPost.text %>">
          <button class="form-control btn btn-success">Submit</button>
        </form>
    </div>
  </div>
</div>

<% include ../partials/footer %>
